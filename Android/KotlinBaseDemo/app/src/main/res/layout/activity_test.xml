<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:text="开启蓝牙"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_opration" android:layout_marginTop="35dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_find" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"/>
    <Button
            android:text="蓝牙搜索"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_find"
            android:layout_marginTop="34dp"
            app:layout_constraintStart_toEndOf="@+id/btn_opration" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="9dp" android:layout_marginRight="9dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="152dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_find"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>